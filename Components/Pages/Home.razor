@page "/"

<PageTitle>Game Catalog</PageTitle>

@if(games.Count() == 0)
{
    <em>Loading...</em>
}
else
{
    <table class="table table-striped table-bordered table-striped-columns table-hover mt-3">
        <thead class="table-dark">
            <th>Id</th>
            <th>Name</th>
            <th>Genre</th>
            <th>Price</th>
            <th>Release Date</th>
            <th></th>
        </thead>
        <tbody>
            @foreach(var game in games)
            {
                <tr>
                    <td>@game.Id</td>
                    <td>@game.Name</td>
                    <td>@game.Genre</td>
                    <td class="text-end">@game.Price.ToString("C2")</td>
                    <td>@game.ReleaseDate</td>
                    <td>

                    </td>
                </tr>
            }
        </tbody>
</table>
}

@code {
    private GamesClient client = new();
    private List<GameSummary> games;
    
    protected override void OnInitialized()
    {
        games = client.GetGameSummaries();
    }
}
